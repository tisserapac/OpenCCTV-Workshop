<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li class="active">Direct IP Cameras</li>
  </ol>
</div>

<div class="container">
  <h1>
    All registered IP Cameras
    <a href="<%=direct_cameras_new_path%>" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> Register a Direct IP Camera</a>
  </h1>
</div>

<br />
<div class="media">
  <%if @vmses.empty?%>
      <div class="alert alert-warning">
        <center>
          Currently no Direct IP Cameras are registered with the system.
        </center>
      </div>
  <%else%>

      <table class="table table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Camera connector</th>
          <th>Stream URL</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% i = 1 %>
        <% @vmses.each do |vms| %>
            <tr>
              <td><%= i %></td>
              <td><%= vms.name %></td>
              <td><%= vms.vms_connector.name %></td>
              <td><%= vms.camera_url %></td>
              <td><%= vms.description %></td>
              <td><%= link_to 'Show Stream', direct_cameras_show_path(vms), :class => "btn btn-xs btn-default" %></td>
              <td><%= link_to 'Edit', direct_cameras_edit_path(vms), :class => "btn btn-xs btn-warning" %></td>
              <td><%= link_to 'Delete', direct_cameras_destroy_path(vms), method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% i = i + 1 %>
        <% end %>
        </tbody>
      </table>
      </div>
  <%end%>
